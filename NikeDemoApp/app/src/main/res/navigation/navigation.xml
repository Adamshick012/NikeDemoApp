<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_root"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.nikedemoapp.feed.FeedFragment"
        android:label="FeedFragment" >
        <action
            android:id="@+id/action_feedFragment_to_albumsDetailFragment"
            app:destination="@id/albumsDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/albumsDetailFragment"
        android:name="com.example.nikedemoapp.ui.AlbumsDetailFragment"
        android:label="AlbumsDetailFragment">
        <argument
            android:name="imageUrl"
            app:argType="string" />
        <argument
            android:name="listOfGenres"
            app:argType="string" />
        <argument android:name="artistName"
            app:argType="string" />
        <argument
            android:name="albumName"
            app:argType="string" />
        <argument
            android:name="releaseDate"
            app:argType="string" />
        <argument
            android:name="copyright"
            app:argType="string" />
        <argument
            android:name="linkToiTunes"
            app:argType="string" />
        <action
            android:id="@+id/action_albumsDetailFragment_to_feedFragment"
            app:destination="@+id/feedFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>