<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="result"
            type="com.example.nikedemoapp.models.Result" />
        <variable
            name="clickListener"
            type="com.example.nikedemoapp.feed.ImageListener" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(result)}"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_height="210dp"
            android:layout_width="match_parent"
            android:id="@+id/imageViewItem"
            android:scaleType="centerCrop"
            android:padding="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:imageUrl="@{result.artworkUrl100}"
            />
        <TextView
            android:id="@+id/text_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:albumName="@{result}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>